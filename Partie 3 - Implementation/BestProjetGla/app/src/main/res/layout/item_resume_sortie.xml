<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bulle_resume_sortie"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:id="@+id/sortie_calcule_transport"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/transport_velo" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durée : "
                android:textColor="@color/almost_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sortie_calcule_duree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h30"
                android:textColor="@color/almost_black"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/almost_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/sortie_calcule_etape_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/etape_bar" />

            <ImageView
                android:id="@+id/sortie_calcule_etape_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/etape_bar" />

            <ImageView
                android:id="@+id/sortie_calcule_etape_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/etape_bar" />

            <ImageView
                android:id="@+id/sortie_calcule_etape_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/etape_bar" />

            <ImageView
                android:id="@+id/sortie_calcule_etape_5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/etape_bar" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attente : "
                android:textColor="@color/almost_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/sortie_calcule_attente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0h08"
                android:textColor="@color/almost_black"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.4" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/icon_droit" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Début : "
                android:textColor="@color/almost_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/sortie_calcule_debut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/11 18h30"
                android:textColor="@color/almost_black"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fin : "
                android:textColor="@color/almost_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/sortie_calcule_fin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/11 18h30"
                android:textColor="@color/almost_black"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>