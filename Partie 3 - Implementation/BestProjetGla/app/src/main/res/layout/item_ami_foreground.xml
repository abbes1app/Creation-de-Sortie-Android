<?xml version="1.0" encoding="utf-8"?>
<com.xenione.libs.swipemaker.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/foregroundView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/almost_black"
        android:orientation="vertical"
        android:paddingBottom="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/input_register_bg"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/image_fleche"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_droit" />

            <TextView
                android:id="@+id/nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/image_fleche"
                android:layout_toRightOf="@+id/image_fleche"
                android:drawableLeft="@mipmap/ic_face_black_24dp"
                android:drawablePadding="5dp"
                android:text="nom"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/prenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/nom"
                android:layout_toRightOf="@+id/nom"
                android:text="prenom"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/adresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/nom"
                android:layout_alignStart="@+id/nom"
                android:layout_below="@+id/nom"
                android:drawableLeft="@mipmap/ic_location_on_black_24dp"
                android:drawablePadding="5dp"
                android:text="45 rue Des Humoristes"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/adresse"
                android:layout_alignStart="@+id/adresse"
                android:layout_below="@+id/adresse"
                android:drawableLeft="@mipmap/ic_call_black_24dp"
                android:drawablePadding="5dp"
                android:text="+331 54 26 35 79"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>

</com.xenione.libs.swipemaker.SwipeLayout>