<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/input_register_bg"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/image_fleche"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_droit" />

    <ImageView
        android:id="@+id/image_transport"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/image_fleche"
        android:layout_toRightOf="@+id/image_fleche"
        app:srcCompat="@drawable/transport_pieton" />

    <TextView
        android:id="@+id/nom_sortie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/image_transport"
        android:layout_toRightOf="@+id/image_transport"
        android:text="nom_sortie"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/lieu_sortie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nom_sortie"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/image_transport"
        android:layout_toRightOf="@+id/image_transport"
        android:text="lieu_sortie"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/date_sortie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:text="date_sortie"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/heure_sortie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/date_sortie"
        android:layout_marginBottom="5dp"
        android:text="heure_sortie"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/icone_etape_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/lieu_sortie"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/image_transport"
        android:layout_toRightOf="@+id/image_transport"
        app:srcCompat="@drawable/etape_bar" />

    <ImageView
        android:id="@+id/icone_etape_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/lieu_sortie"
        android:layout_toEndOf="@+id/icone_etape_1"
        android:layout_toRightOf="@+id/icone_etape_1"
        app:srcCompat="@drawable/etape_bar" />

    <ImageView
        android:id="@+id/icone_etape_3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/lieu_sortie"
        android:layout_toEndOf="@+id/icone_etape_2"
        android:layout_toRightOf="@+id/icone_etape_2"
        app:srcCompat="@drawable/etape_bar" />

    <ImageView
        android:id="@+id/icone_etape_4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/lieu_sortie"
        android:layout_toEndOf="@+id/icone_etape_3"
        android:layout_toRightOf="@+id/icone_etape_3"
        app:srcCompat="@drawable/etape_bar" />

    <ImageView
        android:id="@+id/icone_etape_5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/lieu_sortie"
        android:layout_toEndOf="@+id/icone_etape_4"
        android:layout_toRightOf="@+id/icone_etape_4"
        app:srcCompat="@drawable/etape_bar" />
</RelativeLayout>