<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    grid:columnCount="2"
    grid:rowCount="4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        grid:layout_columnWeight="1"
        grid:layout_gravity="center"
        grid:layout_rowWeight="1">

        <Button
            android:id="@+id/bouton_type_1"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/texte_type_1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        grid:layout_columnWeight="1"
        grid:layout_gravity="center"
        grid:layout_rowWeight="1">

        <Button
            android:id="@+id/bouton_type_2"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/texte_type_2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        grid:layout_columnWeight="1"
        grid:layout_gravity="center"
        grid:layout_rowWeight="1">

        <Button
            android:id="@+id/bouton_type_3"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/texte_type_3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        grid:layout_columnWeight="1"
        grid:layout_gravity="center"
        grid:layout_rowWeight="1">

        <Button
            android:id="@+id/bouton_type_4"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/texte_type_4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        grid:layout_columnWeight="1"
        grid:layout_gravity="center"
        grid:layout_rowWeight="1">

        <Button
            android:id="@+id/bouton_type_5"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/texte_type_5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        grid:layout_columnWeight="1"
        grid:layout_gravity="center"
        grid:layout_rowWeight="1">

        <Button
            android:id="@+id/bouton_type_6"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/texte_type_6"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        grid:layout_columnWeight="1"
        grid:layout_gravity="center"
        grid:layout_rowWeight="1">

        <Button
            android:id="@+id/reset"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/etape_reset" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Reset"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_valide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        grid:layout_columnWeight="1"
        grid:layout_gravity="center"
        grid:layout_rowWeight="1">

        <Button
            android:id="@+id/valider"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/etape_valider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Valider"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</android.support.v7.widget.GridLayout>