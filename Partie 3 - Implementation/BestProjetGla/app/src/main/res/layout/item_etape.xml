<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_temps_trajet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/texte_avant_duree_trajet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durée du trajet : "
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/texte_duree_trajet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1h30"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/image_transport"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/transport_pieton" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_arrive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/texte_avant_arrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrivée : "
                    android:textColor="@color/almost_black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/texte_arrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/11 12h30"
                    android:textColor="@color/almost_black"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Départ : "
                    android:textColor="@color/almost_black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/texte_depart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/11 12h30"
                    android:textColor="@color/almost_black"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:id="@+id/ligne2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/layout_arrive"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/almost_black" />

            <LinearLayout
                android:id="@+id/layout_etape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ligne2"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/image_type_etape"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    app:srcCompat="@drawable/etape_bar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/texte_nom_etape"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom : Chez Antonio"
                        android:textColor="@color/almost_black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/texte_adresse_etape"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adresse : 28 rue LaBonne Tranche"
                        android:textColor="@color/almost_black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/texte_telephone_etape"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Téléphone : +33135647895"
                        android:textColor="@color/almost_black"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>